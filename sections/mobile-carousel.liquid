{{ 'mobile-carousel.css' | asset_url | stylesheet_tag }}
<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="collection-carousel">
  <div class="section_mobile_carousel">
    <div class="mobile_carousel-content swiper-wrapper">
      {%- for block in section.blocks -%}
        <a
          href="{{ block.settings.link }}"
          class="mobile_carousel-container swiper-slide"
          banner-title="{{ block.settings.heading }}"
        >
          <figure class="mobile_carousel-container-image">
            {{
              block.settings.image
              | image_url: width: 90, height: 90
              | image_tag: class: 'mobile_carousel__image'
            }}
          </figure>
          <h2 class="mobile_carousel-container-title">{{ block.settings.title }}</h2>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const swiper = new Swiper(".section_mobile_carousel", {
            slidesPerView: 3.5,
            spaceBetween: 14,
        });
    });
    </script>

{% schema %}
{
  "name": "mobile carousel",
  "max_blocks": 18,
  "blocks": [
    {
      "type": "mobile",
      "name": "mobile",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1120 x 1200px .jpg recommended"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Collection name"
        },
        {
          "type": "url",
          "id": "link",
          "label": "link"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "mobile",
      "name": "mobile carousel",
      "settings": {}
    }
  ]
}
{% endschema %}
